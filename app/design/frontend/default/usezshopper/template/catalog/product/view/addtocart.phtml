        <input name="qty" type="text" size="3" class="input-text qty" id="qty" maxlength="12" value="<?php echo $this->getMinimalQty($_product) ?>" /></span>
        <?php endif; ?>
        <?php if($_product->getRedemption()):?>
	    <button type="button" class="form-button" onclick="productAddToCartForm.submit()"><span><?php echo $this->__('Order') ?></span></button>
	    </p>
	    <?php else:?>
	    </p>
	   <!-- <p><a href="#"><img src="<?php echo $this->getSkinUrl('images/addcart.jpg')?>" width="113" height="21" border="0" onclick="productAddToCartForm.submit()"/></a></p> -->
